<%= simple_form_for @visual, :html => { :multipart => true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
  <%= f.file_field :visual_img %>
  <%= f.input :title, label: "Visual Title" %>
  <%= f.input :description %>
  <%= f.input :creator %>
  <%= f.button :submit, :class => 'btn-custom2' %>
<% end %>